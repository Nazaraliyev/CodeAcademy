
@{
    ViewData["Title"] = "Update";
}

@model IdentityRole

<div class="container-fluid">
	<h2 class="display-4">Update Role</h2>
	<form class="w-50" asp-area="admin" asp-controller="role" asp-action="update" method="post">
		<div asp-validation-summary = "All" class = "text-danger"></div>
		<div class="mb-3">
			<label asp-for = "@Model.Name" class="form-label">Email address</label>
			<input  class="form-control" asp-for = "@Model.Name">
		</div>
		<input asp-for = "@Model.Id" hidden/>
		<input asp-for = "@Model.ConcurrencyStamp" hidden/>
		<button type = "submit" class = "btn btn-primary" >Create</button>
	</form>
</div>