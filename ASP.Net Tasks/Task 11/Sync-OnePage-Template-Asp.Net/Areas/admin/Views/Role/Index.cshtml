@{
	ViewData["Title"] = "Index";
}

@model List<IdentityRole>



<div class="container-fluid">

	<table class="table table-hover w-50">
		<h2 class="display-4 mb-5">Roles</h2>
		<a asp-area="admin" asp-controller="role" asp-action="Create" class="btn btn-primary mb-3">Create New Role</a>
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col" class = "w-50">Role Name</th>
				<th scope="col">Modify</th>
			</tr>
		</thead>
		<tbody>
			@{
				int i = 1;
				foreach (var role in Model)
				{
					<tr>
						<th scope="row">@i</th>
						<td>@role.Name</td>
						<td>
							<a asp-area="admin" asp-controller="role" asp-action="update" asp-route-id = "@role.Id" class="btn btn-outline-primary">Update</a>
							<a asp-area="admin" asp-controller="role" asp-action="delete" asp-route-id = "@role.Id" class="btn btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</a>
						</td>
					</tr>
					i++;
				}
			}
		</tbody>
	</table>


</div>