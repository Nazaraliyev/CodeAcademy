@{
	ViewData["Title"] = "Create";
}
@model VmUserRegister

<div class="container-fluid">
	<h2 class="display-4 mb-5">Create New User</h2>
	<form asp-area="admin" asp-controller="account" asp-action="create" method="post" enctype="multipart/form-data">
		<div asp-validation-summary="All"></div>
		<div class="row">
			<div class="col-6">
				<div class="mb-3">
					<label asp-for="@Model.ImageFile" class="form-label">Profile Image</label>
					<input asp-for="@Model.ImageFile" class="form-control">
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Name" class="form-label">Name</label>
					<input asp-for="@Model.Name" class="form-control">
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Lastname" class="form-label">Lastname</label>
					<input asp-for="@Model.Lastname" class="form-control">
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Username" class="form-label">Username</label>
					<input asp-for="@Model.Username" class="form-control">
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Email" class="form-label">Email</label>
					<input type="email" asp-for="@Model.Email" class="form-control">
				</div>

			</div>
			<div class="col-6">
				<div class="mb-3">
					<label asp-for="@Model.Phone" class="form-label">Phone</label>
					<input type="number" asp-for="@Model.Phone" class="form-control">
				</div>
				<div class="mb-3">
					<label asp-for="@Model.RoleId" class="form-label">User Role</label>
					<select class="form-select form-control" asp-for = "@Model.RoleId" asp-items="@(new SelectList(Model.Role, "Id", "Name"))">
						<option selected>Select User Role</option>
					</select>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Password" class="form-label">Password</label>
					<input type="password" asp-for="@Model.Password" class="form-control">
				</div>
				<div class="mb-3">
					<label asp-for="@Model.ConfirmPassword" class="form-label">Comfirm Password</label>
					<input type="password" asp-for="@Model.ConfirmPassword" class="form-control">
				</div>
				<div class="mb-4 pt-4">
					<button type="submit" class="btn btn-primary w-100">Create</button>
				</div>
			</div>
		</div>
	</form>
</div>