@model Settings


<div class="container-fluid">
	<h2 class="mb-5">Update Settings</h2>
	<form class="w-50" asp-area="admin" asp-controller="Settings" asp-action="Update" method="post">
		<div class="mb-3">
			<label asp-for="@Model.Logo" class="form-label">Category Name</label>
			<input class="form-control" asp-for="@Model.Logo">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.BannerHeader" class="form-label">Category Name</label>
			<input class="form-control" asp-for="@Model.BannerHeader">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.BannerText" class="form-label">Category Name</label>
			<input class="form-control" asp-for="@Model.BannerText">
		</div>
		<input asp-for = "@Model.Id" hidden />
		<button type="submit" class="btn btn-primary">Update</button>
	</form>
</div>