@{
	ViewData["Title"] = "Index";
}
@model List<Employee>
<div class="container-fluid">
	<h2>Employee</h2>
	<a class="btn btn-primary mb-5" asp-area="admin" asp-controller="Employee" asp-action="Create">Create</a>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">First</th>
				<th scope="col">Last</th>
				<th scope="col">FullName</th>
				<th scope="col">Age</th>
				<th scope="col">Email</th>
				<th scope="col">Position</th>
				<th scope="col">Modify</th>

			</tr>
		</thead>
		<tbody>
			@{
				int i = 1;
				foreach (var item in Model)
				{
					<tr>
						<th scope="row">@i</th>
						<td>@item.Name</td>
						<td>@item.LastName</td>
						<td>@item.FullName</td>
						<td>@item.Age</td>
						<td>@item.Email</td>
						<td>@item.position.Name</td>
						<td>
							<a class="btn btn-primary" asp-area="admin" asp-controller="Employee" asp-action="Update" asp-route-id = "@item.Id">Update</a>
							<a class="btn btn-danger" asp-area="admin" asp-controller="Employee" asp-action="Delete" asp-route-id = "@item.Id">Delete</a>
						</td>
					</tr>
				}

				i++;
			}
		</tbody>
	</table>



</div>

