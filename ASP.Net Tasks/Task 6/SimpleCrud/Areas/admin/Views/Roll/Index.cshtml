@model List<IdentityRole>

<div class="container-fluid">
	<h2 class = "mb-55">Rolls</h2>
	<a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Roll" asp-action="Create">Create</a>
	<table class="table w-50">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Roll Name</th>
				<th scope="col">Modify</th>
			</tr>
		</thead>
		<tbody>
			@{
				int i = 1;
				foreach (var item in Model)
				{
					<tr>
						<th scope="row">@i</th>
						<td>@item.Name</td>
						<td>
							<a class="btn btn-primary" asp-area="admin" asp-controller="Roll" asp-action="Update" asp-route-id="@item.Id">Update</a>
							<a class="btn btn-danger" asp-area="admin" asp-controller="Roll" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
						</td>
					</tr>
					i++;
				}

			}
		</tbody>
	</table>
</div>

