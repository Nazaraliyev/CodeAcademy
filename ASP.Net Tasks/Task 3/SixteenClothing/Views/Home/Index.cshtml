@model VmHome

 <!-- Page Content -->
    <!-- Banner Starts Here -->
    <div class="banner header-text">
      <div class="owl-banner owl-carousel">
          @foreach(var item in Model.banners)
        {
         <div class="banner-item-01">
          <div class="text-content">
            <h4>@item.SubHeader</h4>
            <h2>@item.Header</h2>
          </div>
        </div>
        }
    </div>
    </div>
    <!-- Banner Ends Here -->

    <div class="latest-products">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>Latest Products</h2>
              <a href="products.html">view all products <i class="fa fa-angle-right"></i></a>
            </div>
          </div>
          @for (var i = 0;  i < 6;  i++)
          {
            <div class="col-md-4">
            <div class="product-item">
              <a href="#"><img src="/assets/images/@Model.products[i].Img" alt=""></a>
              <div class="down-content">
                <a href="#"><h4>@Model.products[i].Name</h4></a>
                <h6>$@Model.products[i].Price</h6>
                <p>@Model.products[i].Text</p>
                <ul class="stars">
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                </ul>
                <span>Reviews (@Model.products[i].Preview)</span>
              </div>
            </div>
          </div>
          }
        </div>
      </div>
    </div>

    <div class="best-features">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>About Sixteen Clothing</h2>
            </div>
          </div>
