@model VmOurProduct

@{
    VmBannerPartion partion = new VmBannerPartion()
            {
                SubHeader = Model.settings.OurProductSubHeader,
                Header = Model.settings.OurProductHeader
            };
}

<partial name = "_bannerPartial" model = "partion" />

    <div class="products">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="filters">
              <ul>
                  <li class="active" data-filter="*">All Products</li>
                  <li data-filter=".des">Featured</li>
                  <li data-filter=".dev">Flash Deals</li>
                  <li data-filter=".gra">Last Minute</li>
              </ul>
            </div>
          </div>
          <div class="col-md-12">
            <div class="filters-content">
                <div class="row grid">
                    @for (var i = 0; i < 6; i++)
                   {
                     <div class="col-lg-4 col-md-4 all @Model.product[i].ClassName ">
                      <div class="product-item">
                        <a href="#"><img src="/assets/images/@Model.product[i].Img" alt=""></a>
                        <div class="down-content">
                          <a href="#"><h4>@Model.product[i].Name</h4></a>
                          <h6>$@Model.product[i].Price</h6>
                          <p>@Model.product[i].Img</p>
                          <ul class="stars">
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                          </ul>
                          <span>Reviews (@Model.product[i].Preview)</span>
                        </div>
                      </div>
                    </div>
                   }
                </div>
            </div>
          </div>
          <div class="col-md-12">
            <ul class="pages">
              <li><a href="#">1</a></li>
              <li class="active"><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
