@model VmService


<div class='container-fluid'>
	<h2 class="mb-5">Services</h2>

	<hr />
	<a class="btn btn-primary" asp-action="Create">Create New Service</a>
	<div class="row">
		@foreach (var item in Model.Services)
		{
			<div class="col-lg-3 services-item p-3">
				<div class="wrapper p-2" style="border : 1px solid rgba(0, 0, 0, 0.2); border-radius : 5px">

					<i class="@item.Icon" style="color : #4568dc; font-size : 40px"></i>
					<h4 class="my-2">@item.Name</h4>
					<p>@item.Content</p>
					<div class="my-3">
						<a asp-action="edit" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
						<a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
					</div>
				</div>
			</div>
		}
	</div>
	@{
		if (Model.Count != 1 & Model.Count != 0)
		{
			<div>
				<nav aria-label="...">
					<ul class="pagination">
						<li class="page-item @(Model.Page == 0? "disabled" : "")">
							<a class="page-link">Previous</a>
						</li>
						@for (var i = 0; i < Model.Count; i++)
						{
							<li class="page-item @(Model.Page == i? "active" : "")"><a class="page-link" asp-action="Index" asp-route-page="@i">@(i+1)</a></li>

						}
						<li class="page-item  @(Model.Page == Model.Count-1? "disabled" : "")">
							<a class="page-link" href="#">Next</a>
						</li>
					</ul>
				</nav>
			</div>
		}
	}


</div>


