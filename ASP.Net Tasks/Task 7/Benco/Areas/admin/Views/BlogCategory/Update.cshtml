@model Category

<div class="container-fluid">
	<h2 class="mb-5">Update Category</h2>
	<form class="w-50" asp-area="admin" asp-controller="Category" asp-action="Update" method="post">
		<div class="mb-3">
			<label asp-for="@Model.Name" class="form-label">Category Name</label>
			<input class="form-control" asp-for="@Model.Name">
		</div>
		<input asp-for = "@Model.Id" hidden/>
		<button type="submit" class="btn btn-primary">Update</button>
	</form>
</div>