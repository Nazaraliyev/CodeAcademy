@model VmBlogCreate

<div class="container-fluid">
	<h2 class="mb-5">Create New User</h2>
	<form class="w-50" asp-area="admin" asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label class="form-label">Category</label>
			<select class="form-control" asp-for = "@Model.blog.CategoryId"  asp-items="@(new SelectList(Model.category, "Id", "Name"))">
				<option selected>Select Blog Category</option>
			</select>
		</div>
		<div class="mb-3 form-floating">
			<label asp-for="@Model.blog.CoverFile" class="form-label">Add Blog Cover Image</label>
			<input class="form-control" asp-for="@Model.blog.CoverFile">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.blog.Name" class="form-label">Name</label>
			<input class="form-control" asp-for="@Model.blog.Name">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.blog.Content" class="form-label">Content</label>
			<textarea style="height : 200px" class="form-control" asp-for="@Model.blog.Content"></textarea>
		</div>
		<div class="mb-3">
			<label class="form-label">Tags</label>
			<select class="form-control" multiple asp-for = "@Model.Tags" asp-items="@(new SelectList(Model.blogTag, "Id", "Name"))">
				<option selected>Select Tags</option>
			</select>
		</div>

		<button type="submit" class="btn btn-primary">Create</button>
	</form>
</div>