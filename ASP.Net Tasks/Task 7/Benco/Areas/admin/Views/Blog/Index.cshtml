@model List<Blog>

<div class="container-fluid">
	<h2 class="mb-5">Blogs</h2>
	<a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Blog" asp-action="Create">Create New Blog</a>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Image</th>
				<th scope="col">Name</th>
				<th scope="col">Content</th>
				<th scope="col">Tags</th>
				<th scope="col">Category</th>
				<th scope="col">Created Time</th>
				<th scope="col">Modify</th>
			</tr>
		</thead>
		<tbody>
			@{
				int i = 1;
				foreach (var item in Model)
				{
					<tr>
						<th scope="row">@i</th>
						<td>
							<img width="100px" height="100px" src="~/assets/img/blogCover/@item.Cover" />
						</td>

						<td>@item.Name</td>
						<td>@item.Content</td>
						<td>@item.Category.Name</td>
						<td>
						@foreach (var tagToBlog in item.tagToBlogs)
						{
							<span>@tagToBlog.BlogTag.Name</span>
						}
						</td>
						<td>@item.CreatedTime.ToString("dd.MM.yyyy")</td>
						<td>
							<a class="btn btn-primary" asp-area="admin" asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id">Update</a>
							<a class="btn btn-danger" asp-area="admin" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
						</td>
					</tr>
					i++;
				}
			}
		</tbody>
	</table>
</div>