
@{
    ViewData["Title"] = "Create";
}

@model BlogTag


<div class="container-fluid">
	<h2 class="mb-5">Create New Tag</h2>
	<form class="w-50" asp-area="admin" asp-controller="BlogTag" asp-action="Create" method="post">
		<div class="mb-3">
			<label asp-for="@Model.Name" class="form-label">Tag Name</label>
			<input class="form-control" asp-for="@Model.Name">
		</div>
		<button type="submit" class="btn btn-primary">Create</button>
	</form>
</div>