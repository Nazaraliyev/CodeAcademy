@model VmUserRegister

<div class="container-fluid">
	<h2 class="mb-5">Create New User</h2>
	<form class="w-50" asp-area="admin" asp-controller="Account" asp-action="Update" method="post" enctype="multipart/form-data">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3 form-floating">
			<label asp-for="@Model.CostumeUser.ImageFile" class="form-label">Add User Profile Image</label>
			<input class="form-control" asp-for="@Model.CostumeUser.ImageFile">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.CostumeUser.Name" class="form-label">Name</label>
			<input class="form-control" asp-for="@Model.CostumeUser.Name">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.CostumeUser.Lastname" class="form-label">Lastname</label>
			<input class="form-control" asp-for="@Model.CostumeUser.Lastname">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.CostumeUser.UserName" class="form-label">Username</label>
			<input class="form-control" asp-for="@Model.CostumeUser.UserName">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.CostumeUser.PhoneNumber" class="form-label">Phone</label>
			<input type="number" class="form-control" asp-for="@Model.CostumeUser.PhoneNumber">
		</div>
		<div class="mb-3">
			<label asp-for="@Model.CostumeUser.Email" class="form-label">Email</label>
			<input type="email" class="form-control" asp-for="@Model.CostumeUser.Email">
		</div>
		<div class="mb-3">
			<label class="form-label">Roll</label>
			<select class="form-control" asp-for="@Model.RoleId" asp-items="@(new SelectList(ViewBag.Roles, "Id", "Name"))">
				<option selected disabled>Open this select menu</option>
			</select>
		</div>
		<input asp-for = "@Model.CostumeUser.Id" hidden/>
		<input asp-for = "@Model.CostumeUser.Image" hidden />
		<button type="submit" class="btn btn-primary">Update</button>
	</form>
</div>

